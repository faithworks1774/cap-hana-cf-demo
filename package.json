{
  "name": "cap-hana-cf-demo",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xsenv": "^6.1.0",
    "@sap/xssec": "^4.12.2",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-product-ui": "cds watch --open productui/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy cap-hana-cf-demo --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "destinations": true,
      "html5-repo": true
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/product-ui"
  ]
}
